# Production Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgres://marqa_user:your-secure-password@postgres:5432/marqa_souq_v2

# JWT and Session Secrets (Generate strong random values)
JWT_SECRET=your-super-secure-jwt-secret-here
COOKIE_SECRET=your-super-secure-cookie-secret-here

# Stripe Payment Configuration
STRIPE_API_KEY=sk_live_your-stripe-secret-key-here
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret-here

# CORS Configuration
ADMIN_CORS=https://admin.marqasouq.com
STORE_CORS=https://marqasouq.com,https://www.marqasouq.com

# Odoo ERP Configuration
ODOO_USERNAME=admin
ODOO_PASSWORD=your-secure-odoo-password
MEDUSA_API_KEY=your-medusa-admin-api-key

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@marqasouq.com
SMTP_PASS=your-email-password

# File Storage (AWS S3 or similar)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=marqa-souq-uploads

# Domain Configuration
DOMAIN_NAME=marqasouq.com
ADMIN_DOMAIN=admin.marqasouq.com
API_DOMAIN=api.marqasouq.com